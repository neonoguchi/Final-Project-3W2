import pygame
import random
import time

class Player():
   
    def __init__(self, name, size, pos, color, life):
        self.name = name
        self.size = size
        self.pos = pos
        self.color = color
        self.life = life

def main():
    pygame.init()
    pygame.display.set_caption("Simple RPG")
    resolution = (800,800)
    screen = pygame.display.set_mode(resolution)
    running = True
    while running:
        # Event Loop
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                running = False
            
        screen.fill((123,123,123))
        pygame.display.flip()

if __name__ == "__main__":
    main()